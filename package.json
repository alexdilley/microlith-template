{
  "name": "microlith",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "lint:eslint": "eslint --fix",
    "lint:markdownlint": "markdownlint",
    "lint:prettier": "prettier --write --loglevel warn",
    "lint:stylelint": "stylelint",
    "lint:all:eslint": "yarn lint:eslint --ext .js,.svelte .",
    "lint:all:markdownlint": "yarn lint:markdownlint '**/*.md'",
    "lint:all:prettier": "yarn lint:prettier '**/*.{css,html,js,json,md,svelte,yaml}'",
    "lint:all:stylelint": "yarn lint:stylelint '**/*.{css,html,svelte}'",
    "lint": "run-s lint:all:*",
    "dev": "rollup -c -w",
    "build:svelte": "rollup -c",
    "build:sam": "sam build --base-dir src/functions",
    "build": "run-p build:*",
    "start": "sirv dist",
    "deploy:s3": "s3deploy -config .s3deploy.yaml -region $AWS_REGION -bucket $AWS_WEBSITE_BUCKET_NAME -distribution-id $AWS_DISTRIBUTION_ID -source dist -public-access",
    "deploy:sam": "sam deploy --stack-name $AWS_STACK_NAME --s3-bucket $AWS_SAM_SOURCE_BUCKET --capabilities CAPABILITY_IAM --region $AWS_REGION",
    "deploy": "node -r dotenv-flow/config bin/deploy"
  },
  "dependencies": {
    "sirv-cli": "^1.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-html": "^0.2.0",
    "@rollup/plugin-node-resolve": "^8.1.0",
    "cssnano": "^4.1.10",
    "dotenv-flow": "^3.1.0",
    "eslint": "^7.3.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-svelte3": "^2.7.3",
    "handlebars": "^4.7.6",
    "markdownlint-cli": "^0.23.1",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^12.0.1",
    "prettier": "^2.0.5",
    "prettier-plugin-svelte": "^1.1.0",
    "rollup": "^2.18.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-css-asset": "^1.0.2",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-svelte": "^5.2.3",
    "rollup-plugin-tailwindcss": "^1.0.0",
    "rollup-plugin-terser": "^6.1.0",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recess-order": "^2.0.4",
    "stylelint-config-standard": "^20.0.0",
    "svelte": "^3.23.2",
    "svelte-preprocess": "^3.9.10",
    "tailwindcss": "^1.4.6"
  }
}
